<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.allured.marondalgram.feed.dao.FeedDAO">
 	<insert id="insertFeed" parameterType="map">
 		INSERT INTO
 			`feed`
 		(
 			`userId`
 			, `userNickname`
 			, `imgUrl`
 			, `content`
 			, `createdAt`
 			, `updatedAt`
 		) VALUES
 		(
 			#{userId}
 			, #{userNickname}
 			, #{imgUrl}
 			, #{content}
 			, now()
 			, now()
 		)
 	</insert>
 	
 	<select id="selectFeedList" resultType="com.allured.marondalgram.feed.model.Feed">
 		SELECT
 			`id`
 			, `userId`
 			, `userNickname`
 			, `imgUrl`
 			, `content`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`feed`
 		ORDER BY `id` DESC
 	</select>
 	
 	<insert id="insertLike" parameterType="map">
 		INSERT INTO
 			`like`
 		(
 			`feedId`
 			, `userId`
 			, `createdAt`
 		) VALUES
 		(
 			#{feedId}
 			, #{userId}
 			, now()
 		)
 	</insert>
 	
 	<select id="selectLikeCount" parameterType="map" resultType="com.allured.marondalgram.feed.model.Like">
 		SELECT 
 			COUNT(1)
 		FROM
 			`like`
 		WHERE
 			`feedId` = ${feedId}
 		AND `userId` = ${userId}	
 	</select>
 	
 	<delete id="deleteLike" parameterType="int">
 		DELETE FROM
 			`like`
 		WHERE
 			`feedId` = ${feedId}
 		AND `userId` = ${userId}
 	</delete>
 </mapper>