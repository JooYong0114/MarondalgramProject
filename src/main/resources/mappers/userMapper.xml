<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.allured.marondalgram.user.dao.UserDAO">
	<insert id="insertUserInfo" parameterType="String">
		INSERT INTO
			`user`
		(
			`loginId`
			, `name`
			, `nickname`
			, `email`
			, `password`
			, `createdAt`
			, `updatedAt`
		) VALUES
		(
			#{loginId}
			, #{name}
			, #{nickname}
			, #{email}
			, #{password}
			, now()
			, now()
		)
	</insert>
	
	<select id="selectUserInfoById" parameterType="String" resultType="int">
		SELECT
			COUNT(1)
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
	</select>
	
	<select id="selectUserInfoByIdPassword" parameterType="map" resultType="com.allured.marondalgram.user.model.User">
		SELECT
			`id`
			, `name`
			, `nickname`
			, `profileUrl`
			, `loginId`
			, `email`
			, `password`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
		AND `password` = #{password}
	</select>
	
	<select id="selectUserInfo" parameterType="String" resultType="com.allured.marondalgram.user.model.User">
		SELECT
			`id`
			, `name`
			, `nickname`
			, `profileUrl`
			, `loginId`
			, `email`
			, `password`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`nickname` = #{nickname}
	</select>
</mapper>